{
  "name": "vscode-xcode-manager",
  "displayName": "Xcode File Manager",
  "description": "Manage Xcode project files and folders directly from VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/windydy/vscode-xcode-manager.git"
  },
  "publisher": "windydy",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addFileToXcode",
        "title": "Add File to Xcode"
      },
      {
        "command": "extension.addFolderToXcode",
        "title": "Add Folder to Xcode"
      },
      {
        "command": "extension.createFileAndAddToXcode",
        "title": "Create File and Add to Xcode"
      },
      {
        "command": "extension.createFolderAndAddToXcode",
        "title": "Create Folder and Add to Xcode"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.addFileToXcode",
          "group": "xcode@1",
          "when": "!explorerResourceIsFolder"
        },
        {
          "command": "extension.addFolderToXcode",
          "group": "xcode@2",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.createFileAndAddToXcode",
          "group": "xcode@3"
        },
        {
          "command": "extension.createFolderAndAddToXcode",
          "group": "xcode@4"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.createFileAndAddToXcode"
        },
        {
          "command": "extension.createFolderAndAddToXcode"
        },
        {
          "command": "extension.addFileToXcode",
          "when": "false"
        },
        {
          "command": "extension.addFolderToXcode",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
